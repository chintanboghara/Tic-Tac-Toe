{
  "compilerOptions": {
    // ----- Base Settings -----
    // Set the target ECMAScript version
    "target": "ES2020",
    // Enable the use of the "define" semantics for class fields
    "useDefineForClassFields": true,
    // Specify libraries to include during compilation
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    // Use the latest module syntax for dynamic imports and other features
    "module": "ESNext",
    // Skip type-checking of declaration files for faster builds
    "skipLibCheck": true,

    // ----- Bundler Mode Options -----
    // Use bundler-friendly module resolution
    "moduleResolution": "bundler",
    // Allow importing TypeScript files with their extensions
    "allowImportingTsExtensions": true,
    // Treat each file as an isolated module for improved incremental builds
    "isolatedModules": true,
    // Force module detection, ensuring modules are correctly recognized
    "moduleDetection": "force",
    // Prevent the compiler from emitting output (used for type-checking only)
    "noEmit": true,
    // Enable the new React JSX transform
    "jsx": "react-jsx",

    // ----- Strict Type-Checking -----
    // Enable all strict type-checking options
    "strict": true,
    // Report errors on unused local variables
    "noUnusedLocals": true,
    // Report errors on unused function parameters
    "noUnusedParameters": true,
    // Report errors for fallthrough cases in switch statements
    "noFallthroughCasesInSwitch": true
  },
  // Include the source files from the "src" directory
  "include": ["src"]
}
